    <style name="Theme.Forest" parent="Base.Theme.MyStylesAndThemes">
        <item name="colorPrimary">@color/forest_primary</item>
        <item name="colorOnPrimary">@color/forest_on_primary</item>
        <item name="android:colorBackground">@color/forest_background</item>
        <item name="colorSecondary">@color/forest_secondary</item>
        <item name="colorOnSecondary">@color/forest_on_secondary</item>
        <item name="android:textColor">@color/forest_text</item>
        </style>
</resources>